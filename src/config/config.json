{
  "site": {
    "title": "仮想森林ボランティア協会",
    "logoSite": "/images/logo-site.png",
    "logoAdmin": "/images/logo-admin.png",
    "favicon": "/images/favicon.png",
    "head": {
      "defaultDescription": "自然と人々のつながりを大切に、森林の保全活動を行っています。"
    },
    "organization": {
      "name": "NPO法人 仮想森林ボランティア協会",
      "url": "https://www.example.com"
    },
    "comments": {
      "enabled": true
    },
    "contact": {
      "enabled": true
    }
  },
  "upload": {
    "avatar": {
      "url": "/uploads/avatars",
      "directory": "public/uploads/avatars",
      "size": {
        "width": 200,
        "height": 200
      },
      "default": "default.svg"
    },
    "record": {
      "enabled": true,
      "url": "/uploads/records",
      "directory": "public/uploads/records",
      "maxFiles": 10,
      "maxFileSize": 5242880,
      "allowedTypes": ["image/jpeg", "image/png", "image/gif", "image/webp"],
      "maxSize": {
        "width": 1200,
        "height": 1200
      },
      "quality": 85,
      "thumbnail": {
        "width": 96,
        "height": 96
      }
    },
    "news": {
      "enabled": true,
      "url": "/uploads/news",
      "directory": "public/uploads/news",
      "maxFiles": 5,
      "maxFileSize": 10485760,
      "allowedTypes": [
        "application/pdf",
        "application/msword",
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
        "application/vnd.ms-excel",
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
        "image/jpeg",
        "image/png",
        "image/gif"
      ]
    },
    "article": {
      "enabled": true,
      "url": "/uploads/articles",
      "directory": "public/uploads/articles",
      "maxFiles": 30,
      "maxFileSize": 10485760,
      "allowedTypes": ["image/jpeg", "image/png", "image/gif", "image/webp"],
      "maxSize": {
        "width": 1920,
        "height": 1920
      },
      "quality": 85
    }
  },
  "api": {
    "rootUrl": "/api",
    "adminUrl": "/api/admin",
    "memberUrl": "/api/member"
  },
  "dashboard": {
    "recentActivities": {
      "admin": 5,
      "user": 5
    }
  },
  "home": {
    "news": {
      "itemsPerPage": 3
    },
    "events": {
      "itemsPerPage": 3
    }
  },
  "pagination": {
    "recordList": {
      "itemsPerPage": 10
    },
    "newsList": {
      "itemsPerPage": 10
    },
    "articleList": {
      "itemsPerPage": 12
    }
  },
  "content": {
    "titleMaxLength": 30,
    "record": {
      "editDays": 7
    },
    "news": {
      "editDays": 7,
      "defaultAuthor": "事務局"
    },
    "article": {
      "headingShift": 1
    }
  },
  "contact": {
    "nameMaxLength": 50,
    "emailMaxLength": 50,
    "messageMaxLength": 500
  },
  "footer": {
    "contactInfo": {
      "postalCode": "xxx-xxxx",
      "address": "東京都○○区○○町1-2-3",
      "tel": "03-xxxx-xxxx",
      "fax": "03-xxxx-xxxx",
      "email": "info@example.com",
      "businessHours": "平日9:00-17:00",
      "formLink": {
        "href": "/contact",
        "label": "お問い合わせフォーム"
      }
    },
    "social": {
      "twitter": "#",
      "facebook": "#",
      "instagram": "#"
    },
    "copyright": {
      "startYear": 2025
    }
  }
}
