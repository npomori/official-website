---
import Layout from '../layouts/Layout.astro'
---

<Layout title="リンク集">
  <div class="mx-auto max-w-4xl">
    <h1 class="mb-8 text-3xl font-bold">リンク集</h1>

    <section class="mb-12">
      <h2 class="mb-4 text-2xl font-bold">関連団体</h2>
      <div class="rounded-lg bg-white p-6 shadow-lg">
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
          <div>
            <img
              src="https://images.unsplash.com/photo-1497366216548-37526070297c?w=800&auto=format&fit=crop&q=60"
              alt="環境省"
              class="mb-4 h-48 w-full rounded-lg object-cover"
            />
            <h3 class="mb-3 text-xl font-bold">行政機関</h3>
            <ul class="space-y-4">
              <li class="hover:bg-primary-50 rounded p-2 transition-colors">
                <a href="#" class="flex items-center text-gray-700">
                  <span class="text-primary-600 mr-2">•</span>
                  <span>環境省 - 森林・緑化に関する情報</span>
                </a>
              </li>
              <li class="hover:bg-primary-50 rounded p-2 transition-colors">
                <a href="#" class="flex items-center text-gray-700">
                  <span class="text-primary-600 mr-2">•</span>
                  <span>林野庁 - 森林ボランティア情報</span>
                </a>
              </li>
              <li class="hover:bg-primary-50 rounded p-2 transition-colors">
                <a href="#" class="flex items-center text-gray-700">
                  <span class="text-primary-600 mr-2">•</span>
                  <span>東京都環境局 - 緑化推進事業</span>
                </a>
              </li>
            </ul>
          </div>
          <div>
            <img
              src="https://images.unsplash.com/photo-1464746133101-a2c3f88e0dd9?w=800&auto=format&fit=crop&q=60"
              alt="NPO団体"
              class="mb-4 h-48 w-full rounded-lg object-cover"
            />
            <h3 class="mb-3 text-xl font-bold">NPO・市民団体</h3>
            <ul class="space-y-4">
              <li class="hover:bg-primary-50 rounded p-2 transition-colors">
                <a href="#" class="flex items-center text-gray-700">
                  <span class="text-primary-600 mr-2">•</span>
                  <span>全国森林ボランティア協会</span>
                </a>
              </li>
              <li class="hover:bg-primary-50 rounded p-2 transition-colors">
                <a href="#" class="flex items-center text-gray-700">
                  <span class="text-primary-600 mr-2">•</span>
                  <span>日本自然保護協会</span>
                </a>
              </li>
              <li class="hover:bg-primary-50 rounded p-2 transition-colors">
                <a href="#" class="flex items-center text-gray-700">
                  <span class="text-primary-600 mr-2">•</span>
                  <span>緑の地球ネットワーク</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="mb-4 text-2xl font-bold">教育・研究機関</h2>
      <div class="rounded-lg bg-white p-6 shadow-lg">
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
          <div>
            <img
              src="https://images.unsplash.com/photo-1541829070764-84a7d30dd3f3?w=800&auto=format&fit=crop&q=60"
              alt="研究機関"
              class="mb-4 h-48 w-full rounded-lg object-cover"
            />
            <h3 class="mb-3 text-xl font-bold">研究機関</h3>
            <ul class="space-y-4">
              <li class="hover:bg-primary-50 rounded p-2 transition-colors">
                <a href="#" class="flex items-center text-gray-700">
                  <span class="text-primary-600 mr-2">•</span>
                  <span>森林総合研究所</span>
                </a>
              </li>
              <li class="hover:bg-primary-50 rounded p-2 transition-colors">
                <a href="#" class="flex items-center text-gray-700">
                  <span class="text-primary-600 mr-2">•</span>
                  <span>国立環境研究所</span>
                </a>
              </li>
              <li class="hover:bg-primary-50 rounded p-2 transition-colors">
                <a href="#" class="flex items-center text-gray-700">
                  <span class="text-primary-600 mr-2">•</span>
                  <span>生物多様性センター</span>
                </a>
              </li>
            </ul>
          </div>
          <div>
            <img
              src="https://images.unsplash.com/photo-1427504494785-3a9ca7044f45?w=800&auto=format&fit=crop&q=60"
              alt="教育機関"
              class="mb-4 h-48 w-full rounded-lg object-cover"
            />
            <h3 class="mb-3 text-xl font-bold">教育機関</h3>
            <ul class="space-y-4">
              <li class="hover:bg-primary-50 rounded p-2 transition-colors">
                <a href="#" class="flex items-center text-gray-700">
                  <span class="text-primary-600 mr-2">•</span>
                  <span>東京農業大学 森林科学科</span>
                </a>
              </li>
              <li class="hover:bg-primary-50 rounded p-2 transition-colors">
                <a href="#" class="flex items-center text-gray-700">
                  <span class="text-primary-600 mr-2">•</span>
                  <span>筑波大学 生物資源学類</span>
                </a>
              </li>
              <li class="hover:bg-primary-50 rounded p-2 transition-colors">
                <a href="#" class="flex items-center text-gray-700">
                  <span class="text-primary-600 mr-2">•</span>
                  <span>環境教育情報センター</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="bg-primary-50 rounded-lg p-8">
      <h2 class="mb-4 text-2xl font-bold">関連情報</h2>
      <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
        <div class="rounded-lg bg-white p-4 shadow">
          <img
            src="https://images.unsplash.com/photo-1416879595882-3373a0480b5b?w=800&auto=format&fit=crop&q=60"
            alt="森林・自然情報"
            class="mb-4 h-32 w-full rounded-lg object-cover"
          />
          <h3 class="mb-2 text-lg font-bold">森林・自然情報</h3>
          <ul class="space-y-2 text-base">
            <li>
              <a href="#" class="text-primary-600 hover:text-primary-700"
                >• 日本の森林データベース</a
              >
            </li>
            <li>
              <a href="#" class="text-primary-600 hover:text-primary-700"
                >• 生物多様性情報システム</a
              >
            </li>
          </ul>
        </div>
        <div class="rounded-lg bg-white p-4 shadow">
          <img
            src="https://images.unsplash.com/photo-1452457750107-cd084dce177d?w=800&auto=format&fit=crop&q=60"
            alt="ボランティア情報"
            class="mb-4 h-32 w-full rounded-lg object-cover"
          />
          <h3 class="mb-2 text-lg font-bold">ボランティア情報</h3>
          <ul class="space-y-2 text-base">
            <li>
              <a href="#" class="text-primary-600 hover:text-primary-700">• ボランティアポータル</a>
            </li>
            <li>
              <a href="#" class="text-primary-600 hover:text-primary-700">• 環境活動データベース</a>
            </li>
          </ul>
        </div>
        <div class="rounded-lg bg-white p-4 shadow">
          <img
            src="https://images.unsplash.com/photo-1434626881859-194d67b2b86f?w=800&auto=format&fit=crop&q=60"
            alt="環境教育"
            class="mb-4 h-32 w-full rounded-lg object-cover"
          />
          <h3 class="mb-2 text-lg font-bold">環境教育</h3>
          <ul class="space-y-2 text-base">
            <li>
              <a href="#" class="text-primary-600 hover:text-primary-700">• 環境学習プログラム</a>
            </li>
            <li>
              <a href="#" class="text-primary-600 hover:text-primary-700">• 自然体験活動情報</a>
            </li>
          </ul>
        </div>
      </div>
    </section>
  </div>
</Layout>
