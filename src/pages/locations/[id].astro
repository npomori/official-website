---
import Layout from '@/layouts/Layout.astro'
import LocationDetail from '@/components/location/LocationDetail.tsx'

// URLパラメータから活動地IDを取得
const { id } = Astro.params
---

<Layout title="活動地詳細" currentPage={Astro.url.pathname}>
  <!-- React コンポーネント -->
  <LocationDetail client:load locationId={id} />
</Layout>
