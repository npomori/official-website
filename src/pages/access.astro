---
import Layout from '../layouts/Layout.astro'
import config from '@/config/config.json'

const { footer, access } = config
const { contactInfo } = footer
---

<Layout title="アクセス">
  <div class="mx-auto max-w-4xl">
    <h1 class="mb-8 text-3xl font-bold">アクセス</h1>

    <section class="mb-12">
      <h2 class="mb-4 text-2xl font-bold">{access.office.name}</h2>
      <div class="rounded-lg bg-white p-6 shadow-lg">
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
          <div>
            <h3 class="mb-3 text-xl font-bold">住所</h3>
            <p class="text-gray-700">
              〒{contactInfo.postalCode}<br />
              {contactInfo.address}
            </p>
          </div>
          <div>
            <h3 class="mb-3 text-xl font-bold">連絡先</h3>
            <p class="text-gray-700">
              TEL: {contactInfo.tel}<br />
              FAX: {contactInfo.fax}<br />
              Email: {contactInfo.email}
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="mb-4 text-2xl font-bold">地図</h2>
      <div class="rounded-lg bg-white p-6 shadow-lg">
        <div class="aspect-w-16 aspect-h-9">
          <iframe
            src={access.map.embedUrl}
            width={access.map.width}
            height={access.map.height}
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="mb-4 text-2xl font-bold">アクセス方法</h2>
      <div class="rounded-lg bg-white p-6 shadow-lg">
        <div class="space-y-6">
          <div>
            <h3 class="mb-3 text-xl font-bold">電車でお越しの場合</h3>
            <p class="text-gray-700">
              {
                access.transportation.train.map((line: string, index: number) => (
                  <>
                    {line}
                    {index < access.transportation.train.length - 1 && <br />}
                  </>
                ))
              }
            </p>
          </div>
          <div>
            <h3 class="mb-3 text-xl font-bold">お車でお越しの場合</h3>
            <p class="text-gray-700">
              {access.transportation.car}
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="mb-4 text-2xl font-bold">受付時間</h2>
      <div class="rounded-lg bg-white p-6 shadow-lg">
        <table class="w-full">
          <tbody>
            <tr class="border-b">
              <th class="w-1/3 py-3 text-left">{access.businessHours.weekday.label}</th>
              <td class="py-3">{access.businessHours.weekday.hours}</td>
            </tr>
            <tr class="border-b">
              <th class="py-3 text-left">{access.businessHours.saturday.label}</th>
              <td class="py-3">{access.businessHours.saturday.hours}</td>
            </tr>
            <tr>
              <th class="py-3 text-left">{access.businessHours.holiday.label}</th>
              <td class="py-3">{access.businessHours.holiday.hours}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>

    <section class="bg-primary-50 rounded-lg p-8">
      <h2 class="mb-4 text-2xl font-bold">お問い合わせ</h2>
      <p class="mb-6 text-gray-700">
        アクセスに関するご質問やご相談がございましたら、お気軽にお問い合わせください。
      </p>
      <div class="flex space-x-4">
        <a
          href={contactInfo.formLink.href}
          class="bg-primary-600 hover:bg-primary-700 rounded-lg px-6 py-3 text-white transition-colors"
        >
          {contactInfo.formLink.label}
        </a>
        <a
          href={`tel:${contactInfo.tel}`}
          class="border-primary-600 text-primary-600 hover:bg-primary-50 rounded-lg border bg-white px-6 py-3 transition-colors"
        >
          電話で問い合わせ
        </a>
      </div>
    </section>
  </div>
</Layout>
