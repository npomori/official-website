---
import config from '@/config/config.json'

interface Props {
  titleLine1?: string
  titleLine2?: string
  subtitle?: string
}

const {
  titleLine1 = 'NPO法人',
  titleLine2 = config.site.title + 'へようこそ',
  subtitle = '自然と人々のつながりを大切に、森林の保全活動を行っています'
} = Astro.props
---

<div class="bg-header relative">
  <div class="absolute inset-0 z-10 bg-black/15"></div>
  <div class="relative z-20">
    <slot name="navigation" />
    <div class="container mx-auto px-4 py-32 text-center">
      <div class="inline-block text-left">
        <h1 class="mb-4 text-4xl font-bold text-white drop-shadow-lg md:text-6xl">
          <div class="mb-2 text-3xl drop-shadow-lg md:text-5xl">{titleLine1}</div>
          <div class="whitespace-nowrap drop-shadow-lg">{titleLine2}</div>
        </h1>
      </div>
      <p class="text-xl text-white drop-shadow-md">
        {subtitle}
      </p>
    </div>
  </div>
</div>

<style>
  .bg-header {
    background-image: url('/images/header-bg.jpg');
    background-size: cover;
    background-position: center;
    min-height: 400px;
  }
</style>
